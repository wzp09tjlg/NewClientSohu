<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/sina_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/sina_img_cardview"
            android:layout_width="@dimen/dimen_200dp"
            android:layout_height="@dimen/dimen_200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_cat1"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/sina_text_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="@string/cardview_center"
            />
        </android.support.v7.widget.CardView>
    <SeekBar
        android:id="@+id/sina_seek_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sina_cardview"
        android:layout_centerHorizontal="true"
        />
    <SeekBar
        android:id="@+id/sina_seek_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sina_seek_corner"
        android:layout_centerHorizontal="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sina_seek_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/sina_btn_appUtil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="appUtil"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:id="@+id/sina_btn_densityUtil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="desityUtil"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:id="@+id/sina_btn_httpUtil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="httpUtil"
                android:layout_gravity="center_horizontal"
                />
            <ImageView
                android:id="@+id/sina_img_http"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_cat1"/>
            <Button
                android:id="@+id/sina_btn_keyboardUtil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="keyboardUtil"
                android:layout_gravity="center_horizontal"
                />
            <EditText
                android:id="@+id/sina_edt_keyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/sina_btn_LogUtil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LogUtil"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:id="@+id/sina_btn_NetUtil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NetUtil"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:id="@+id/sina_btn_ScreenUtil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ScreenUtil"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:id="@+id/sina_btn_SDCardUtil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SDCardUtil"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:id="@+id/sina_btn_SPUtil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPUtil"
                android:layout_gravity="center_horizontal"
                />
            </LinearLayout>
        </ScrollView>
</RelativeLayout>
